<form col="6">
    <group id="moves_info" colspan="6" col="-1">
        <label name="source"/>
        <field name="source"/>
        <label name="destination"/>
        <field name="destination"/>
    </group>
    <group id="product_info" coslpan="6" col="-1">
        <label name="quantity"/>
        <field name="quantity" xexpand="0"/>
        <field name="uom" xexpand="0"/>
        <label name="product"/>
        <field name="product"/>
    </group>
    <group id="dates" colspan="6" col="-1">
        <label name="day_difference"/>
        <field name="day_difference" xexpand="0"/>
        <label name="source_date"/>
        <field name="source_date" xexpand="0" widget="date"/>
        <label name="destination_date"/>
        <field name="destination_date" xexpand="0" widget="date"/>
    </group>
    <button name="destination_relate" />
</form>